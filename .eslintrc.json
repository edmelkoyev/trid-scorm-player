{
  "root": true,
  "ignorePatterns": [],
  "plugins": ["@nx", "import-newlines", "react-hooks", "@stylistic"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": [
          "tsconfig.base.json",
          "lib/editor/tsconfig.json",
          "lib/portal/tsconfig.json",
          "lib/shared-components/tsconfig.json",
          "lib/viewer/tsconfig.json"
        ]
      }
    }
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "extends": ["airbnb", "plugin:import/recommended"],
      "rules": {
        "react/jsx-uses-react": "off",
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off",
        "react/require-default-props": "off",
        "react/jsx-filename-extension": ["error", { "extensions": [".jsx", ".tsx"] }],
        "react/function-component-definition": ["error", { "namedComponents": "arrow-function" }],
        "react/jsx-props-no-spreading": "off",
        "react-hooks/exhaustive-deps": "error",
        "react/jsx-indent": ["error", 2],
        "@stylistic/semi": 2,
        "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
        "import/prefer-default-export": "off",
        "no-underscore-dangle": ["error", { "allow": ["__typename"] }],
        "no-console": "error",
        "import/extensions": [
          "error",
          "ignorePackages",
          {
            "js": "never",
            "mjs": "never",
            "jsx": "never",
            "ts": "never",
            "tsx": "never"
          }
        ],
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": ["*"]
              }
            ]
          }
        ],
        "import/order": [
          "error",
          {
            "groups": ["builtin", "external", "internal", "sibling", "parent", "index", "object", "type"]
          }
        ],
        "import/newline-after-import": ["error", { "count": 2 }],
        "no-multiple-empty-lines": ["error", { "max": 2, "maxBOF": 0, "maxEOF": 0 }],
        //"indent": ["error", 2],
        "max-len": [
          "warn",
          160,
          {
            "ignoreComments": true,
            "ignoreStrings": true,
            "ignoreUrls": true,
            "ignoreTemplateLiterals": true
          }
        ],
        "object-curly-newline": [
          "warn",
          {
            "ObjectExpression": { "consistent": true, "multiline": true },
            "ObjectPattern": { "consistent": true, "multiline": true },
            "ImportDeclaration": { "multiline": true, "minProperties": 2 },
            "ExportDeclaration": { "multiline": true, "minProperties": 3 }
          }
        ],
        "import-newlines/enforce": ["warn", { "items": 1 }],
        // Temporary disabled
        "jsx-a11y/click-events-have-key-events": "off",
        "jsx-a11y/no-noninteractive-element-interactions": "off",
        "jsx-a11y/label-has-associated-control": "off",
        "react/no-unused-prop-types": "off",
        "function-paren-newline": "off"
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {
        "semi": "off",
        "no-use-before-define": "off",
        "@typescript-eslint/no-use-before-define": "error",
        "no-shadow": "off",
        "@typescript-eslint/no-shadow": "error",
        "@typescript-eslint/no-unused-vars": ["error", {
          "caughtErrorsIgnorePattern": "^_",
          "ignoreRestSiblings": true
        }]
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {
        "semi": "warn"
      }
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "env": {
        "jest": true
      },
      "rules": {}
    }
  ]
}
