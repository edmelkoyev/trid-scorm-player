  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "cd client && npx webpack serve --mode development",
    "dev:server": "cd server && npx ts-node-dev --respawn src/index.ts",
